project Alog_Tests is

   type Build_Type is ("base", "full");
   Build : Build_Type := external ("ALOG_BUILD", "base");

   type Coverage_Type is ("True", "False");
   Cov   : Coverage_Type := external ("COVERAGE", "False");

   for Languages use ("Ada");
   for Source_Dirs use ("src", "tests");

   Compiler_Switches := ("-gnaty3aAbcdefhiIklnprStuxM80o",
                         "-gnatVa",
                         "-gnat05",
                         "-gnatwa",
                         "-gnatf",
                         "-fstack-check",
                         "-gnato",
                         "-g");

   Linker_Switches   := ("-Wl,--as-needed",
                         "-g");
   case Cov is
      when "False" =>
         for Object_Dir use "obj";
      when "True" =>
         for Object_Dir use "obj/cov";
         Compiler_Switches := Compiler_Switches
           & ("-ftest-coverage", "-fprofile-arcs");
         Linker_Switches   := Linker_Switches
           & ("-fprofile-generate");
   end case;

   case Build is
      when "base" =>
         for Main use ("runner_base.adb");
      when "full" =>
         for Main use ("runner_full.adb");
   end case;


   package Linker is
      for Default_Switches ("ada") use Linker_Switches;
      for Linker_Options use ();
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use Compiler_Switches;
   end Compiler;

end Alog_Tests;
